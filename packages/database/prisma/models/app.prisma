// Application models

enum SiteStatus {
    Active
    Inactive
}

model Site {
    id          String     @id @default(uuid())
    name        String
    description String?
    status      SiteStatus @default(Active)

    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
