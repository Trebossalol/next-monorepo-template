{
  "name": "next-monorepo-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint:fix": "biome check --write .",
    "check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@workspace/typescript-config": "workspace:*",
    "turbo": "^2.6.3",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "msw"
    ],
    "onlyBuiltDependencies": [
      "msw"
    ],
    "peerDependencyRules": {
      "allowedVersions": {
        "@prisma/client": "7",
        "zod": "3"
      }
    }
  }
}