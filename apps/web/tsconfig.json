{
	"extends": "@workspace/typescript-config/nextjs.json",
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@workspace/ui/*": ["../../packages/ui/src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"next.config.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
